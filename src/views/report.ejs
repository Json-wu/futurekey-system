<!-- views/report.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>学生签到和评价表格</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background-color: #ffffff;
        }
        th, td {
            padding: 10px;
            border: 1px solid #dddddd;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .status-select {
            width: 100%;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .feedback-textarea {
            width: 100%;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
            resize: vertical;
        }
    </style>
</head>
<body>
    <h1>课程反馈表</h1>
    <h3>学生签到和评价表格</h3>
    <table>
        <thead>
            <tr>
                <th>学生姓名</th>
                <th>签到状态</th>
                <th>老师评价</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach(student => { %>
                <tr>
                    <td><%= student.name %></td>
                    <td>
                        <%= student.state %>
                    </td>
                    <td>
                        <textarea class="feedback-textarea" readonly><%= student.evaluate %></textarea>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <h3>课堂作业</h3>
    <textarea class="feedback-textarea" readonly><%= value1 %></textarea>
</body>
</html>
