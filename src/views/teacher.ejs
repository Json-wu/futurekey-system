        for (let i = 0; i < files.length; i++) {
            const file = files[i];
            const fileId = 'file-' + Date.now() + '-' + i;

            // 创建 FormData 对象
            const formData = new FormData();
            formData.append('file', file);

            // 向服务器发送文件
            fetch('/upload', {
                method: 'POST',
                body: formData
            })
                .then(response => response.json()) // 假设服务器返回JSON
                .then(result => {
                    if (result.code !== 0) {
                        alert('Failed to upload file.');
                        return;
